# Copy this file to deploy.env and fill in your values
# Then run: source deploy.env && ./deploy.sh

# Required variables
export KEY_PAIR_NAME="my-secrets-service-key"
export JWT_SECRET="your-super-secret-jwt-key-here"
export VITE_SECRETS_SERVICE_USERNAME="your-username"
export VITE_SECRETS_SERVICE_PASSWORD="your-password"
export GITHUB_REPO="https://github.com/your-username/PersonalBlog2022.git"

